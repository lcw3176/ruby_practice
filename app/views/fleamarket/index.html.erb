<% @response.each do |response| %>

  <a class="box is-shadowless" href="/fleamarket/<%= response.id.to_s %>">

    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <%= image_tag(response.thumbnail_url, :alt => "placeholder") %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= response.title %></strong>
            <br>
            <small><%= response.trade_address %></small>
            <small><%= ((Time.now - response.updated_at) / 60 / 60).floor %>시간 전</small>
            <br>
            <%= response.price %>원
          </p>
        </div>
      </div>
    </article>
  </a>

<% end %>