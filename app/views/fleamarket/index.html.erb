<% @response.each do |response| %>

  <a class="box is-shadowless" href="/fleamarket/<%= response.id.to_s %>">

    <article class="media">
      <div class="media-left">
        <figure class="image is-96x96 is-square">
          <%= image_tag(response.thumbnail_url, :alt => "placeholder") %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= response.title %></strong>
            <br>
            <small><%= response.trade_address %> * </small>
            <small><%= ((Time.now - response.updated_at) / 60 / 60).floor %>시간 전</small>
            <br>
            <%= response.read_attribute_before_type_cast(:trade_status) == FleamarketPost.trade_statuses[:wait] ? "" : "블라블라" %> <%= response.price %>
            원
          </p>
        </div>
      </div>
    </article>
  </a>

<% end %>